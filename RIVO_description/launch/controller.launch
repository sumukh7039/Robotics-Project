<launch>

<rosparam file="$(find RIVO_description)/launch/controller.yaml" command="load"/>
<node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false" output="screen" ns="RIVO" args="dof_1_position_controller dof_3_position_controller dof_4_position_controller dof_2_position_controller joint_state_controller "/>
<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen">
  <remap from="/joint_states" to="/RIVO/joint_states"/>
</node>

</launch>